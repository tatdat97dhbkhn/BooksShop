<div class="col-md-12">
  <%= form_for @book do |f| %>
    <%= render "shared/error_messages", object: f.object %>
    <%= f.label :category_id %>
    <br>
    <%= f.select(:category_id,
      [[ "Choose Category", 0]] + Category.all.map{ |c| [c.name, c.id] }) %>
    <br><br>
    <br>
    <%= f.select(:author_id,
      [[ "Choose Author", 0]] + Author.all.map{ |c| [c.name, c.id] }) %>
    <br><br>
    <div class="form-group">
      <%= f.label :name %><br />
      <%= f.text_field :name, autofocus: true, autocomplete: "name",
        class: "form-control", placeholder: "Enter Name Category" %>
    </div>
    <div class="form-group">
      <%= f.label :description %><br />
      <%= f.text_area :description, class: "form-control", rows: 5 %>
    </div>
    <div class="form-group">
      <%= f.label :price %><br />
      <%= f.number_field :price, min: 1, class: "form-control" %>
    </div>
    <div class="form-group">
        <%= f.label :image %>
      <div class="img-medium">
      <%= image_tag @book.image.url if @book.image? %>
      </div>
      <%= f.file_field :image, accept: "image/jpeg,image/gif,image/png",
        class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :public_date %><br />
      <%= f.date_field :public_date, as: :date,
        value: f.object.try(:strftime,"%m/%d/%Y"), class: 'form-control' %>
    </div>
    <%= f.submit "Submit form", class: "btn btn-default sign-up" %>
  <% end %>
</div>
